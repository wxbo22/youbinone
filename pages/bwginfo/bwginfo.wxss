/* BANNER */
.bwgdetail-banner{
    position: relative;
    height: 400rpx;
}
.bwgdetail-banner image{
    width: 100%;
    height: 400rpx;
}

.bwg-title{
    height: 80rpx;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    width: 100%;
    position: absolute;
    z-index: 20;
    color: #fff;
    font-weight: bold;
    bottom: 0;
    left: 0;
}

.bwg-title text{
    padding: 0 0 0 30rpx;
}

/* 大图详细 */
.bwgdetail-prop{
    background-color: #eee;
    padding: 20rpx;
    margin: 0 0 20rpx 0;
}

.detail-prop-an{
    color: #333;
    line-height: 50rpx;
}

.detail-prop-an .iconfont{
    color: #666;
    margin: 0 10rpx 0 0;
}

/* 语音讲解 */
.bwg-common-icon-t{
    width: 10rpx;
    height: 36rpx;
    background: linear-gradient(to bottom, #00e7f3 , #01c0d2);
    margin: 0 10rpx 0 0;
}

.bwg-common-title{
    display: flex;
    margin: 30rpx 20rpx;
    align-items: center;    
}

.bwg-common-h3{
    font-size: 36rpx;
    font-weight: bold;
}