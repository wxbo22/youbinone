.person-detail-nav{
    height: 80rpx;
    display: flex;
    border-bottom: 1rpx solid #ccc;
    background-color: #fff;
    align-items: stretch;
    justify-content: space-around;
    position: fixed;
    width: 100%;
}

.per-nav-one{
    width: 33.33%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
}

.nav-active{
    color: #01c0d2;
}

.per-nav-one i{
    font-size: 40rpx;
}

.per-nav-one text{
    font-size: 32rpx;
    margin: 0 0 0 10rpx;
}